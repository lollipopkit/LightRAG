###########################
### Production .env
### Usage:
###   docker compose --env-file .prod.env -f docker-compose.prod.yaml up -d
###########################

###########################
### Server Configuration
###########################
HOST=0.0.0.0
PORT=9621
WORKERS=2
TIMEOUT=300
CORS_ORIGINS=*

INPUT_DIR=/app/data/inputs
WORKING_DIR=/app/data/rag_storage_prod

LOG_LEVEL=INFO

###########################
### Auth (pick one)
###########################
LIGHTRAG_API_KEY=CHANGE_ME
WHITELIST_PATHS=/health,/docs,/openapi.json,/redoc,/webui/*,/static/*

# AUTH_ACCOUNTS=admin:CHANGE_ME
# TOKEN_SECRET=CHANGE_ME
# TOKEN_EXPIRE_HOURS=48
# JWT_ALGORITHM=HS256

###########################
### LLM (OpenAI-compatible)
###########################
LLM_BINDING=openai
LLM_MODEL=gemini-3-flash-preview
LLM_BINDING_HOST=http://100.127.102.84:8317/v1
LLM_BINDING_API_KEY=CHANGE_ME
LLM_TIMEOUT=180
OPENAI_LLM_MAX_COMPLETION_TOKENS=9000

###########################
### Embedding (Ollama)
###########################
EMBEDDING_BINDING=ollama
EMBEDDING_MODEL=qwen3-embedding:4b
EMBEDDING_DIM=2560
EMBEDDING_BINDING_HOST=http://100.105.52.16:11434

###########################
### Workspace
###########################
WORKSPACE=prod1

###########################
### Storage (production)
###########################
LIGHTRAG_KV_STORAGE=RedisKVStorage
LIGHTRAG_DOC_STATUS_STORAGE=RedisDocStatusStorage
LIGHTRAG_VECTOR_STORAGE=QdrantVectorDBStorage
LIGHTRAG_GRAPH_STORAGE=Neo4JStorage

###########################
### Redis
###########################
REDIS_URI=redis://redis:6379
REDIS_SOCKET_TIMEOUT=30
REDIS_CONNECT_TIMEOUT=10
REDIS_MAX_CONNECTIONS=200

###########################
### Qdrant
###########################
QDRANT_URL=http://qdrant:6333
# QDRANT_API_KEY=CHANGE_ME

###########################
### Neo4j
###########################
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=CHANGE_ME
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=100
NEO4J_CONNECTION_TIMEOUT=30
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=30
NEO4J_MAX_TRANSACTION_RETRY_TIME=30
NEO4J_MAX_CONNECTION_LIFETIME=300
NEO4J_LIVENESS_CHECK_TIMEOUT=30
NEO4J_KEEP_ALIVE=true
